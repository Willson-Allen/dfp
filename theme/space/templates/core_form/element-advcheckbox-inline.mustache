<div class="my-2 ml-2 pt-2 custom-control custom-switch form-check-inline {{#error}}has-danger{{/error}} fitem {{#advanced}}advanced{{/advanced}} {{{element.extraclasses}}}">
    {{^element.hardfrozen}}
    {{^element.frozen}}
        <input type="hidden" name="{{element.name}}" value="{{element.deselectedvalue}}">
    {{/element.frozen}}
    {{#element.frozen}}
        <input type="hidden" name="{{element.name}}" value="{{element.frozenvalue}}">
    {{/element.frozen}}
    {{/element.hardfrozen}}
    <input type="checkbox"
        class="custom-control-input {{element.extraclasses}}"
        name="{{element.name}}"
        {{#element.selectedvalue}}
        value="{{element.selectedvalue}}"
        {{/element.selectedvalue}}
        id="{{element.id}}" {{#element.checked}}checked{{/element.checked}}
        {{#error}}
            autofocus aria-describedby="{{element.iderror}}"
        {{/error}}
        {{#element.frozen}}
            disabled
        {{/element.frozen}}
        {{{element.attributes}}}
        >
    <label class="custom-control-label" for="{{element.id}}">
        {{{label}}}
    </label>

    {{#text}}
    <span class="small mt-1 mb-3 w-100">{{{.}}}</span>
    {{/text}}

</div>

{{{helpbutton}}}
{{#error}}
<span class="form-control-feedback invalid-feedback" id="{{element.iderror}}" {{#error}} style="display: block;"{{/error}}>
    {{{error}}}
</span>
{{/error}}
{{^element.frozen}}
{{#js}}
require(['theme_space/form-display-errors'], function(module) {
    module.enhance({{#quote}}{{element.id}}{{/quote}});
});
{{/js}}
{{/element.frozen}}
